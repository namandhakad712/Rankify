# Advanced Diagram Detection System - Environment Configuration

# =============================================================================
# API Configuration
# =============================================================================

# Gemini API Key (Required for diagram detection)
# Get your API key from: https://makersuite.google.com/app/apikey
NUXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here

# API Configuration
NUXT_PUBLIC_API_TIMEOUT=30000
NUXT_PUBLIC_MAX_RETRIES=3

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable main features
NUXT_PUBLIC_ENABLE_DIAGRAM_DETECTION=true
NUXT_PUBLIC_ENABLE_ACCESSIBILITY=true
NUXT_PUBLIC_ENABLE_RESPONSIVE_DESIGN=true

# Debug and development features
NUXT_PUBLIC_ENABLE_DEBUG_MODE=false
NUXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# =============================================================================
# Processing Configuration
# =============================================================================

# Diagram detection settings
NUXT_PUBLIC_CONFIDENCE_THRESHOLD=0.7
NUXT_PUBLIC_BATCH_SIZE=5
NUXT_PUBLIC_ENABLE_AUTO_DETECTION=true
NUXT_PUBLIC_ENABLE_FALLBACK_DETECTION=true

# Performance settings
NUXT_PUBLIC_ENABLE_LAZY_LOADING=true
NUXT_PUBLIC_ENABLE_IMAGE_COMPRESSION=true
NUXT_PUBLIC_MAX_IMAGE_SIZE=10485760
NUXT_PUBLIC_COMPRESSION_QUALITY=0.8

# =============================================================================
# Storage Configuration
# =============================================================================

# IndexedDB settings
NUXT_PUBLIC_ENABLE_INDEXEDDB=true
NUXT_PUBLIC_CACHE_EXPIRATION=86400000
NUXT_PUBLIC_MAX_CACHE_SIZE=104857600

# =============================================================================
# UI Configuration
# =============================================================================

# Accessibility settings
NUXT_PUBLIC_DEFAULT_FONT_SIZE=medium
NUXT_PUBLIC_DEFAULT_COLOR_SCHEME=light
NUXT_PUBLIC_ENABLE_HIGH_CONTRAST=false
NUXT_PUBLIC_ENABLE_REDUCED_MOTION=false

# Responsive design settings
NUXT_PUBLIC_ENABLE_FLUID_TYPOGRAPHY=true
NUXT_PUBLIC_ENABLE_RESPONSIVE_IMAGES=true
NUXT_PUBLIC_ENABLE_TOUCH_OPTIMIZATION=true
NUXT_PUBLIC_ENABLE_CONTAINER_QUERIES=true

# =============================================================================
# Development Configuration
# =============================================================================

# Development server settings
NUXT_HOST=0.0.0.0
NUXT_PORT=3000

# Logging configuration
NUXT_PUBLIC_LOG_LEVEL=warn

# =============================================================================
# Production Configuration
# =============================================================================

# Node.js environment
NODE_ENV=production

# Security settings (for production)
NUXT_SECRET_KEY=your_secret_key_here
NUXT_SESSION_SECRET=your_session_secret_here

# =============================================================================
# Optional Services Configuration
# =============================================================================

# Redis configuration (if using caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Database configuration (if using external database)
DATABASE_URL=
DATABASE_PASSWORD=

# Monitoring configuration
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false

# =============================================================================
# Docker Configuration
# =============================================================================

# Docker-specific settings
DOCKER_REGISTRY=
DOCKER_TAG=latest

# =============================================================================
# CDN and Asset Configuration
# =============================================================================

# CDN settings (optional)
CDN_URL=
ASSETS_URL=

# =============================================================================
# Error Reporting Configuration
# =============================================================================

# Error reporting service (optional)
SENTRY_DSN=
ERROR_REPORTING_ENABLED=false

# =============================================================================
# Analytics Configuration
# =============================================================================

# Analytics service (optional)
GOOGLE_ANALYTICS_ID=
ANALYTICS_ENABLED=false

# =============================================================================
# Email Configuration (for notifications)
# =============================================================================

# Email service settings (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@yourapp.com

# =============================================================================
# Backup Configuration
# =============================================================================

# Backup settings (optional)
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =============================================================================
# Rate Limiting Configuration
# =============================================================================

# Rate limiting settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# CORS Configuration
# =============================================================================

# CORS settings
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# =============================================================================
# SSL/TLS Configuration
# =============================================================================

# SSL settings (for production)
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# =============================================================================
# Maintenance Mode
# =============================================================================

# Maintenance mode settings
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# =============================================================================
# Feature Experiments
# =============================================================================

# Experimental features (use with caution)
EXPERIMENTAL_FEATURES=false
EXPERIMENTAL_WASM_SUPPORT=false
EXPERIMENTAL_WEBGL_ACCELERATION=false